#include<cstdio>
#define LL long long

using namespace std;

const LL mod=1000000007;

LL n;
int prim[3000005],ptop;
bool b[3000005];

void Euler_prim(LL n){
	LL ub=2*n;;
	for(int i=2;i<=ub;i++){
		
		if(!b[i])prim[++ptop]=i;
		for(int j=1;j<=ptop&&prim[j]*i<=ub;j++){
			b[prim[j]*i]=1;
			if(!i%prim[j])break;
		}
	}
}
LL Qpow(LL a,LL b,LL mod){
	LL sum=1;
	while(b){
		if(b&1)sum=a*sum%mod;
		b>>=1;
		a=a*a%mod;
	}
	return sum;
}
LL count(LL n,LL prim){
	LL ans=0;
	while(n){
		n=n/prim;
		ans+=n;
	}
	return ans;
}
LL Catalan(LL n,LL mod){
	LL ans=1;
	LL ub=2*n;
	LL lb=n;
	LL di=n+1;
	for(register int i=1;i<=ptop;i++){
		LL Prim=prim[i];
		LL usum=count(ub,Prim);
		LL lsum=count(lb,Prim);
		LL dsum=count(di,Prim);
		LL sum=usum-lsum-dsum;
		ans=ans*Qpow(Prim,sum,mod)%mod;
	}
	return ans;
}

int main(){
	scanf("%d",&n);
	Euler_prim(n);
	printf("%lld",Catalan(n,mod));
}
